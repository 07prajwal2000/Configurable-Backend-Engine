{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2024",
    "outDir": "dist",
    "sourceRoot": "deployments/standalone.ts",
    "sourceMap": true,
    "strict": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "types": ["node"],
    "jsx": "react",
    "noEmit": false
  },
  "exclude": [
    "dist",
    "build",
    "**/*.spec.ts",
    "**/*.test.ts",
  ]
}